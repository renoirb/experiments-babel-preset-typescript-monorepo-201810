{
  "editor.rulers": [80],
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "coverage": true,
    "packages/*/dist": true,
    "packages/*/api-docs": true,
    "examples/*/dist": true,
    "**/.sandbox": true
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "tslint.ignoreDefinitionFiles": true,
  "eslint.enable": false
}
